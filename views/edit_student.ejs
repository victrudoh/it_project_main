<div class="container">

    <div class="mt-5">

      <div class="row">

        <div class="card col-sm-12 col-md-6 offset-md-3 col-lg-6 offset-lg-3 shadow rounded bg-secondary">

          <main class="form-signin">
            <form method="POST" action="/students/edit">
              <input type="hidden" name="id" value="<%= student.id %>">

                <h1 class="h3 mb-3 mt-4 fw-normal text-white">Update Student</h1>

                    <div class="form-floating">
                        <input name="name" type="text" class="form-control mb-1 mt-4" id="name" placeholder="Student Name" value="<%= student.name %>" required>
                        <label for="name" class="text-muted"><h5>Student Name</h5></label>
                        <div id="name"><h6>Surname first.</h6></div>
                    </div>
    
                    <div class="form-floating">
                        <input name="department" type="text" class="form-control mb-1 mt-4" id="department" placeholder="Department" value="<%= student.department %>">
                        <label for="department" class="text-muted"><h5>Department</h5></label>
                        <div id="department"><h6>Enter accredited department.</h6></div>
                    </div>
    
                    <div class="form-floating">
                        <input name="phone" type="number" class="form-control mb-1 mt-4" id="phone" placeholder="Phone Number" value="<%= student.phone %>">
                        <label for="phone" class="text-muted"><h5>Phone Number</h5></label>
                        <div id="phone"><h6>Enter valid phone number.</h6></div>
                    </div>

                    <div class="form-floating">
                        <input name="bio" type="text" class="form-control mb-1 mt-4" id="bio" placeholder="Biographical Info"value="<%= student.bio %>" >
                        <label for="bio"class="text-muted"><h5>Biographical Info</h5></label>
                        <div id="bio"><h6>Tell us about you.</h6></div>
                    </div>              
          
                <div class="form-floating">
                    <input name="email" type="email" class="form-control mb-1 mt-4" id="email" placeholder="name@example.com" value="<%= student.email %>" required>
                    <label for="email" class="text-muted"><h5>Email Address</h5></label>
                    <div id="email"><h6>We'll never share your email with anyone else.</h6></div>
                </div>

