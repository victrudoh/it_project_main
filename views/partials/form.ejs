<div class="container">

    <div class="mt-5">

      <div class="row">

        <div class="card col-sm-12 col-md-6 offset-md-3 col-lg-6 offset-lg-3 shadow rounded bg-secondary">

          <main class="form-signin">
            <form method="POST" action="<%= type == 'Register' ? '/auth/register' : '/auth/login' %>">

              <% if (title === 'Register User') { %>
                <h1 class="h3 mb-3 mt-4 fw-normal text-white"><%= title %></h1>
              <% } else { %>
                <h1 class="h3 mb-3 mt-4 fw-normal text-white"><%= title %></h1>
              <% } %>
                
              <% if (type === 'Register') { %>

                    <div class="form-floating">
                        <input name="name" type="text" class="form-control mb-1 mt-4" id="name" placeholder="name" required>
                        <label for="name" class="text-muted"><h5>Full Name</h5></label>
                        <div id="name"><h6>Surname first.</h6></div>
                    </div>
    
                    <div class="form-floating">
                        <input name="department" type="text" class="form-control mb-1 mt-4" id="" placeholder="department">
                        <label for="department" class="text-muted"><h5>department</h5></label>
                        <div id="department"><h6>Enter valid display name</h6></div>
                    </div>
    
                    <div class="form-floating">
                        <input name="phone" type="number" class="form-control mb-1 mt-4" id="phone" placeholder="Phone Number">
                        <label for="phone" class="text-muted"><h5>Phone Number</h5></label>
                        <div id="phone"><h6>Enter valid phone number.</h6></div>
                    </div>

                    <div class="form-floating">
                        <input name="bio" type="text" class="form-control mb-1 mt-4" id="bio" placeholder="Biographical Info">
                        <label for="bio"class="text-muted"><h5>Biographical Info</h5></label>
                        <div id="bio"><h6>Tell us about you.</h6></div>
                    </div>

                <% } %>
              
          
                <div class="form-floating">
                    <input name="email" type="email" class="form-control mb-1 mt-4" id="email" placeholder="name@example.com" required>
                    <span class="text-danger"><% message ? message : "" %></span>
                    <label for="email" class="text-muted"><h5>Email Address</h5></label>
                    <div id="email"><h6>We'll never share your email with anyone else.</h6></div>
                </div>

                <div class="form-floating">
                    <input name="password" type="password" class="form-control mb-1 mt-4" id="password" placeholder="Password" required>
                    <label for="password" class="text-muted"><h5>Password</h5></label>
                    <div id="password"><h6>Password is secret and should not be shared.</h6></div>
                </div>
          
              <div class="checkbox mb-3">
                <label>
                  <input type="checkbox" value="remember-me"> Remember me
                </label>
              </div>
              <button class="w-100 btn btn-lg btn-primary" type="submit"><%= type %></button>
              <p class="mt-3 mb-2 text-white">&copy; 2017â€“2021</p>
            </form>
          </main>

        </div>

      </div>

    </div>

  </div>